<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blurred_image">

    <ImageButton
        android:id="@+id/arrowBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/botoncircularback"
        android:contentDescription="Perfil"
        android:src="@drawable/arrow_back_24dp_1f1f1f_fill0_wght400_grad0_opsz24" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roudscroll"
        android:padding="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <!-- Platillo 1 con sombra y bordes redondeados -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_background"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/Comida1" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/platillo_1_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tacos al Pastor"
                        android:fontFamily="@font/fuentee"
                        android:textColor="@color/gold"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/platillo_1_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fuentee"
                        android:text="Deliciosos tacos de cerdo marinados con piña"
                        android:textColor="@color/text_light"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="match_parent "
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$$"
                            android:fontFamily="@font/fuente"
                            android:textColor="@color/gold"
                            android:textSize="18dp"
                            android:layout_marginBottom=""
                            />
                        <Button
                            android:id="@+id/btn_add"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_add"
                            android:text="+"
                            android:layout_marginLeft="170dp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Platillo 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_background"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/comida2"
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/platillo_2_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enchiladas Verdes"
                        android:fontFamily="@font/fuentee"
                        android:textColor="@color/gold"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/platillo_2_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fuentee"
                        android:text="Deliciosas enchiladas acompañadas de salsa verde"
                        android:textColor="@color/text_light"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="match_parent "
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$$"
                            android:fontFamily="@font/fuente"
                            android:textColor="@color/gold"
                            android:textSize="18dp"
                            android:layout_marginBottom=""
                            />
                        <Button
                            android:id="@+id/btn_add"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_add"
                            android:text="+"
                            android:layout_marginLeft="170dp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Platillo 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_background"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/comida3" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/platillo_3_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tamales de Elote"
                        android:fontFamily="@font/fuentee"
                        android:textColor="@color/gold"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/platillo_3_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fuentee"
                        android:text="Tamales dulces de elote con una suave textura"
                        android:textColor="@color/text_light"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="match_parent "
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$$"
                            android:fontFamily="@font/fuente"
                            android:textColor="@color/gold"
                            android:textSize="18dp"
                            android:layout_marginBottom=""
                            />
                        <Button
                            android:id="@+id/btn_add"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_add"
                            android:text="+"
                            android:layout_marginLeft="170dp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Platillo 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_background"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/comida4" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/platillo_4_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fuentee"
                        android:text="Sopes de Carne"
                        android:textColor="@color/gold"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/platillo_4_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fuentee"
                        android:text="Sopes caseros con carne deshebrada y salsa roja"
                        android:textColor="@color/text_light"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="match_parent "
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$$"
                            android:fontFamily="@font/fuente"
                            android:textColor="@color/gold"
                            android:textSize="18dp"
                            android:layout_marginBottom=""
                            />
                        <Button
                            android:id="@+id/btn_add"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_add"
                            android:text="+"
                            android:layout_marginLeft="170dp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAGAR"
        android:textColor="@color/text_light"
        android:fontFamily="@font/fuentee"
        android:background="@drawable/button_add"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>

</LinearLayout>