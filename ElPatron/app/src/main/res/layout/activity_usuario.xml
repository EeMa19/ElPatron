<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginpatron">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/botoncircularback"
        android:src="@drawable/iconatras"
        android:contentDescription="Volver" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:elevation="12dp">

        <ImageView
            android:id="@+id/img_perfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/asper"
            android:scaleType="centerCrop"
            android:background="@drawable/botoncircularback"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: Jean"
            android:textSize="22sp"
            android:textColor="@color/gold"
            android:fontFamily="@font/fuentee"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección: Calle Falsa 123, Colonia Centro"
            android:textSize="16sp"
            android:textColor="@color/text_light"
            android:fontFamily="@font/fuentee"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono: +52 123 456 7890"
            android:textSize="16sp"
            android:textColor="@color/text_light"
            android:fontFamily="@font/fuentee"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btn_editar_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Perfil"
            android:background="@drawable/button_add"
            android:textColor="@android:color/white"
            android:fontFamily="@font/fuentee"
            android:layout_gravity="center_horizontal"
            android:padding="14dp" />

    </LinearLayout>

</RelativeLayout>