<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/LoginPa">

    <androidx.cardview.widget.CardView
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="32dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:alpha="0.99"
            android:background="@color/background_dark"
            android:orientation="vertical"
            android:padding="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Bienvenido al Patron!"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/gold"
                android:fontFamily="@font/fuentee"
                android:layout_marginTop="40dp"
                android:textSize="26sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="correo@ejemplo.com"
                android:inputType="text"
                android:fontFamily="@font/fuentee"
                android:textColorHint="@color/background_dark"
                android:background="@drawable/button_add"
                android:layout_marginTop="30dp"
                android:padding="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:fontFamily="@font/fuentee"
                android:background="@drawable/button_add"
                android:textColorHint="@color/background_dark"
                android:padding="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Olvidaste tu contraseña?"
                android:textColor="@color/gold"
                android:textSize="16dp"
                android:fontFamily="@font/fuentee"
                android:layout_marginTop="20dp"
                />
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_forward_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                android:fontFamily="@font/fuentee"
                android:background="@drawable/button_add"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear una cuenta :)"
                android:textColor="@color/gold"
                android:textSize="16dp"
                android:fontFamily="@font/fuentee"
                android:layout_marginTop="15dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>
